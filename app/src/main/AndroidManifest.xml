<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.subhasmith.loadshare">

    <application
        android:name="com.subhasmith.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LoadShare">
        <activity
            android:name=".view.SplashActivity"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.LoadShare.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.SearchIFSCActivity"
            android:label="@string/title_activity_search_i_f_s_c"
            android:theme="@style/Theme.LoadShare.NoActionBar" />
        <activity android:name=".view.MainActivity"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>